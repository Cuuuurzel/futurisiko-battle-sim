<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cuuuurzel.fbs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.cuuuurzel.fbs.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cuuuurzel.fbs.BattleResultActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/battle_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cuuuurzel.fbs.StepByStepActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/step_by_step"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.cuuuurzel.fbs.SimulationActivity"
            android:label="@string/simulation"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
